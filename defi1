    <script>
        const correctFlag = "FLAG{1nsp3ct_th3_s0urc3_c0d3}";

        function validateFlag() {
            const input = document.getElementById('flag-input');
            const message = document.getElementById('message');
            const userFlag = input.value.trim();

            if (userFlag === correctFlag) {
                message.className = 'message success';
                message.textContent = '‚úÖ Bravo ! Flag correct ! D√©fi 1 compl√©t√© ! üéâ';
                
                // Sauvegarder la progression
                saveProgress(1);
                
                // Redirection apr√®s 2 secondes
                setTimeout(() => {
                    window.location.href = 'index.html';
                }, 2000);
            } else {
                message.className = 'message error';
                message.textContent = '‚ùå Flag incorrect ! Relis bien les indices et inspecte le code source...';
                
                input.style.animation = 'shake 0.5s';
                setTimeout(() => {
                    input.style.animation = '';
                }, 500);
            }
        }

        function saveProgress(challengeId) {
            const saved = localStorage.getItem('ctf_progress');
            const progress = saved ? JSON.parse(saved) : [];
            if (!progress.includes(challengeId)) {
                progress.push(challengeId);
                localStorage.setItem('ctf_progress', JSON.stringify(progress));
            }
        }

        // Validation avec la touche Entr√©e
        document.getElementById('flag-input').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                validateFlag();
            }
        });

        // Auto-focus sur l'input
        document.getElementById('flag-input').focus();
    </script>
